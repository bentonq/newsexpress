<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newsitem_normal"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/newsitem_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="148dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="易信，泡泡里的真相"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/H1"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/newsitem_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/newsitem_title"
        android:layout_alignRight="@id/newsitem_title"
        android:layout_below="@id/newsitem_title"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:lines="3"
        android:text="丁磊和电信合作发布易信，大大地扬眉吐气了一把。为了让电信有信心，三石还上演“温酒拔网线”的戏码，令晓初前列腺大悦，按下不表。易信的出台潜藏着多方角力，坊间已有各种说法，此处也不过多引用，只说说老生自己的无责任臆测。"
        android:textColor="@color/H2"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/newsitem_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/newsitem_summary"
        android:layout_alignRight="@id/newsitem_summary"
        android:layout_below="@id/newsitem_summary"
        android:layout_marginTop="8dp"
        android:lines="1"
        android:shadowColor="@color/ShaderColorInverse"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="45分钟前"
        android:textColor="@color/H4"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/newsitem_image"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/newsitem_date"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/newsitem_title"
        android:layout_marginRight="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/a" />

    <FrameLayout
        android:id="@+id/newsitem_space"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_below="@id/newsitem_date" >
    </FrameLayout>

</RelativeLayout>