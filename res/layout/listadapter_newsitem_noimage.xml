<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newsitem_noimage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/newsitem_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="8点1氪晚间版：从这一个月挂一次的节奏来看，微信应该是一个姑娘"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/H1"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/newsitem_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/newsitem_title"
        android:layout_alignRight="@id/newsitem_title"
        android:layout_below="@id/newsitem_title"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:lines="3"
        android:text="昨天晚上，微信再一次挂了，这是继7月22号以来的第二次。难怪有网友说，以这一个月来一挂的节奏，微信应该是个姑娘伢。 "
        android:textColor="@color/H2"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/newsitem_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/newsitem_summary"
        android:layout_alignRight="@id/newsitem_summary"
        android:layout_below="@id/newsitem_summary"
        android:layout_marginTop="8dp"
        android:lines="1"
        android:shadowColor="@color/ShaderColorInverse"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="45分钟前"
        android:textColor="@color/H4"
        android:textSize="12sp" />

    <FrameLayout
        android:id="@+id/newsitem_space"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_below="@id/newsitem_date" >
    </FrameLayout>

</RelativeLayout>
