<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newsitem_normal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/newsitem_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="闹钟应用也能有社交元素？闹钟应用早睡早起要帮你和你的小伙伴养成良好的生活习惯"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/H1"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/newsitem_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/newsitem_title"
        android:layout_alignRight="@id/newsitem_title"
        android:layout_below="@id/newsitem_title"
        android:layout_marginRight="140dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:lines="4"
        android:text="过去我接触过的闹钟应用大都是从 UI 和易用性两个角度着手的，很少碰到像“早睡早起”这样主打理念的闹钟应用。"
        android:textColor="@color/H2"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/newsitem_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/newsitem_summary"
        android:layout_alignRight="@id/newsitem_summary"
        android:layout_below="@id/newsitem_summary"
        android:layout_marginTop="8dp"
        android:lines="1"
        android:shadowColor="@color/ShaderColorInverse"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="45分钟前"
        android:textColor="@color/H4"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/newsitem_image"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/newsitem_date"
        android:layout_alignRight="@id/newsitem_title"
        android:layout_alignTop="@id/newsitem_summary"
        android:scaleType="centerCrop"
        android:src="@drawable/c" />

    <FrameLayout
        android:id="@+id/newsitem_space"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_below="@id/newsitem_date" >
    </FrameLayout>

</RelativeLayout>
